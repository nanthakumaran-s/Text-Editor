@model Text_Editor.Models.UserModel
@{
    ViewData["Title"] = "Login";
}


<div style="width: 100%; height: 100%; display: flex; flex-direction:column; align-items: center; justify-content: center">
    <div style="display: flex; flex-direction: column; margin-top: 8rem" class="px-5 py-6 shadow-sm">
        <h1>Login</h1>
        <form asp-action="Login" style="display: flex; flex-direction: column; width: 500px; margin-top: 1rem; margin-bottom: 1rem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div id="error-div" style="position:relative; width:100%; text-align:center;">
                    <button style="position:absolute; top:0; right:0;" type="button" class="btn-close"
                            onclick="getElementById('error-div').remove();">
                    </button>
                    <h5 class="alert-danger">@ViewBag.Error</h5>
                </div>
            }
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" name="email" class="form-control mb-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" for="password">Password</label>
                <input asp-for="Password" type="password" name="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-danger w-25 mt-3" value="Submit" />
            </div>
        </form>
        <p style="margin-bottom: 2rem">Not yet a member? <a href="/User/Register">Register</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}